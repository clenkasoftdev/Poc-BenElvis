@model Clenka.Benelvis.BackendRsvp.DTOs.RsvpEntityDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>You are about to delete the entry for  @Model.Title @Model.Fname @Model.Lname</h3>
<h5 style="color:red">Are you sure you want to delete this?</h5>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title) @Html.DisplayFor(model => model.Fname) @Html.DisplayFor(model => model.Lname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendance)
        </dd>
        <dt class="col-sm-2">
           Relationship
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            Got link from
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LinkChoice)
        </dd>
        <dt class="col-sm-2">
            Link provided by
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OtherText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat)
        </dd>

        <dt class="col-sm-2">
           Email already sent?
        </dt>
        <dd class="col-sm-10">
            @if (Model.EmailSent)
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
